{
  "name": "marcomarchione.it",
  "version": "0.4.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "docker compose -f docker-compose.dev.yml up",
    "dev:build": "docker compose -f docker-compose.dev.yml up --build",
    "dev:api": "docker compose -f docker-compose.dev.yml up api",
    "dev:admin": "docker compose -f docker-compose.dev.yml up admin",
    "dev:web": "docker compose -f docker-compose.dev.yml up web",
    "dev:local": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "build:api": "bun run --filter @marcomarchione/api build",
    "build:admin": "bun run --filter @marcomarchione/admin build",
    "build:web": "bun run --filter @marcomarchione/web build",
    "test": "bun run --filter @marcomarchione/api test",
    "test:api": "bun run --filter @marcomarchione/api test",
    "test:e2e": "bun run --filter @marcomarchione/admin test:e2e",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "bun run --filter '*' lint",
    "db:generate": "bun run --filter @marcomarchione/api db:generate",
    "db:migrate": "bun run --filter @marcomarchione/api db:migrate",
    "db:push": "bun run --filter @marcomarchione/api db:push",
    "db:studio": "bun run --filter @marcomarchione/api db:studio",
    "clean": "rm -rf packages/*/node_modules packages/*/dist node_modules",
    "prod": "docker compose up -d",
    "prod:build": "docker compose up -d --build",
    "prod:down": "docker compose down",
    "prod:logs": "docker compose logs -f",
    "dev:down": "docker compose -f docker-compose.dev.yml down",
    "dev:logs": "docker compose -f docker-compose.dev.yml logs -f"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "playwright": "^1.57.0",
    "typescript": "^5.7.2"
  }
}
