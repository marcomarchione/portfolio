{
  "name": "@marcomarchione/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "test": "bun test src/",
    "test:db": "bun test src/db/",
    "typecheck": "tsc --noEmit",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "media:cleanup": "bun run src/scripts/cleanup-media.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@libsql/client": "^0.15.15",
    "@marcomarchione/shared": "workspace:*",
    "@sinclair/typebox": "^0.34.41",
    "drizzle-orm": "^0.38.3",
    "elysia": "^1.4.19",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "drizzle-kit": "^0.30.1",
    "typescript": "^5.7.2"
  }
}
