# Server Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_PATH=./data.db

# CORS (comma-separated origins)
# Include both frontend and admin panel origins
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# Authentication
# Generate hash with: bun -e "console.log(await Bun.password.hash('your-password', { algorithm: 'bcrypt', cost: 10 }))"
# Note: The config.ts manually parses ADMIN_PASSWORD_HASH to avoid Bun's dotenv variable expansion
# which would otherwise corrupt bcrypt hashes containing $ characters
JWT_SECRET=your-secret-at-least-32-characters-long
ADMIN_PASSWORD_HASH=$2b$10$your-bcrypt-hash-here

# Media uploads
UPLOADS_PATH=./uploads
